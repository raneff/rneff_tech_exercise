
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add</h2>

<form id="songAddForm" class="form-horizontal" action="/Song/Add" method="post">
    <div class="form-group">
        <label for="inputPiece" class="col-sm-2 control-label">Piece</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="piece" id="inputPiece" placeholder="Piece" data-rule-validisbn="true">
        </div>
    </div>
    <div class="form-group">
        <label for="inputComposer" class="col-sm-2 control-label">Composer</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="composer" id="inputComposer" placeholder="Composer">
        </div>
    </div>
    <div class="form-group">
        <label for="inputDateCheckedOut" class="col-sm-2 control-label">DateCheckedOut</label>
        <div class="col-sm-10">
            <input type="DateTime" class="form-control" name="dateCheckedOut" id="inputDateCheckedOut" placeholder="DateCheckedOut">
        </div>
    </div>
    <div class="form-group">
        <label for="inputDueDate" class="col-sm-2 control-label">DueDate</label>
        <div class="col-sm-10">
            <input type="DateTime" class="form-control" name="dueDate" id="inputDueDate" placeholder="DueDate" min="0">
        </div>

    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>
